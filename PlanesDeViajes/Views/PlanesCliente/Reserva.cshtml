@model PlanesDeViajes.Models.ViewModels.NuevoReservacionesViewModel

@{
    ViewBag.Title = "Reservar plan de viaje";
    

}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Reserva", "PlanesCliente", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">

            <div class="form-group">
                @Html.LabelFor(d => d.IdDetalle)
                @Html.TextBoxFor(d => d.IdDetalle, "", new { @class = "form-control", Value = ViewBag.idplan })

            </div>

            <div class="form-group">
                @Html.LabelFor(d => d.Cliente)
                @Html.TextBoxFor(d => d.Cliente, "", new { @class = "form-control" })

            </div>

            <div class="form-group">
                @Html.LabelFor(d => d.Correo)
                @Html.TextBoxFor(d => d.Correo, "", new { @class = "form-control" })

            </div>


            <div style="text-align: right; padding:10px; ">
                <input class="btn btn-success" value="Reservar" type="submit" />
            </div>

        </div>
    </div>
}

